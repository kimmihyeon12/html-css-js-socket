    }

    .fc-toolbar-chunk {
      display: flex;

    }

    .fc-toolbar-chunk>div {
      display: flex;
    }

    .fc-toolbar-title {
      font-family: "NeoEB";
    }

    .fc-prev-button,.fc-next-button,.fc-today-button {
      background-color: transparent !important;
